#!/usr/bin/env ruby

require 'rubygems'
require 'ninja_rope'

game = Game.new
timer = 0
game.scenario = File.read(ARGV.first)
  ((1..12).map { |x|
    (1..14).map { |y|
      timer += 100
      "#{timer} #{x},#{y}"
    }
  } +
  (1..100).map { |i|
    timer += 100
    "#{timer} #{rand 30},#{rand 25}"
  }).join("\n")
game.start
while not game.end?
  game.update
end
